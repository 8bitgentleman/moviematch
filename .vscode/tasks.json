{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "esbuild: build",
      "command": "esbuild",
      "args": ["--bundle", "src/main.ts", "--outdir=dist"],
      "options": {
        "cwd": "${workspaceFolder}/web/app"
      },
      "isBackground": true
    }
  ]
}
